<Window x:Class="GLApp.logWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Окно входа" Height="275" Width="300" ResizeMode="NoResize" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="login" Margin="35,40,35,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="22" KeyUp="textbox_KeyUp" />
        <PasswordBox x:Name="passwd" Margin="35,100,35,0" VerticalAlignment="Top" Height="22" KeyUp="textbox_KeyUp" />
        <Button x:Name="loginBtn" Content="Войти" Margin="107,147,107,0" VerticalAlignment="Top" Click="LoginBtn_Click"/>
        <Label Content="Логин" Margin="10,10,10,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" Name="logLabel"/>
        <Label Content="Пароль" Margin="10,72,10,0" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="RegBtn" Content="Зарегистрироваться" Margin="80,194,80,0" VerticalAlignment="Top" Click="RegBtn_Click"/>

    </Grid>
</Window>
