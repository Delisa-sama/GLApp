<Window x:Class="GLApp.TechSupport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Техподдержка" Height="450" Width="800" WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <ListBox Name="QuestionListBox" Margin="0,32,0,0" />
        <TextBox Text="Название" Grid.Column="1" Height="32" Name="HeaderTextBox" VerticalAlignment="Top" />
        <TextBox Text="Текст вопроса" Grid.Column="1" Margin="0,32,0,29" Name="QuestionTextTB" />
        <Button Content="Задать вопрос" Grid.Column="1" Height="31" Name="AskQuestionBtn" VerticalAlignment="Bottom" FontWeight="Bold" FontStyle="Normal" FontFamily="Segoe UI" FontSize="13" Click="AskQuestionBtn_Click" />
        <Label Content="Поиск по названию или номеру:" Height="28" HorizontalAlignment="Left" Margin="0,4,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="32" Margin="196,0,45,0" Name="SearchString" VerticalAlignment="Top" />
        <Button Content="Найти" Height="32" Name="SearchBtn" VerticalAlignment="Top" Click="SearchBtn_Click" HorizontalAlignment="Right" Width="44" />
    </Grid>
</Window>
